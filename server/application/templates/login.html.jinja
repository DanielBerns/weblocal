{% extends "base.html.jinja" %}

{% block content %}
    <div class="w3-row-padding">
    <div class="w3-cell w3-quarter"><br></div>
    <div class="w3-cell w3-half w3-white">
    <div class="w3-content w3-center"><h3>{{ title }}</h3></div>
    <div class="w3-container">     
    <form class="w3-container" action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.username.label }}<br>
            {{ form.username(size=32, class_="w3-input") }}
            {% for error in form.username.errors %}
            <span class="w3-red">[{{ error }}]</span>
            {% endfor %}            
        </p>
        <p>
            {{ form.password.label }}<br>
            {{ form.password(size=32, class_="w3-input") }}
            {% for error in form.password.errors %}
            <span class="w3-red">[{{ error }}]</span>
            {% endfor %}            
        </p>
        <p>{{ form.remember_me() }} {{ form.remember_me.label }}</p>
        {% for error in form.remember_me.errors %}
        <span class="w3-red">[{{ error }}]</span>
        {% endfor %}                    
        <p>{{ form.submit() }}</p>
    </form>
    </div>
    </div>
    <div class="w3-cell-row w3-quarter"><br></div>
</div>
{% endblock %} 
